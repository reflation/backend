type User {
  id: ID! @id
  mailid: String! @unique
  name: String
  createdAt: DateTime! @createdAt
  averagePoint: Float! @default(value: 0.0)
  semesters: [Semester!]
}

enum SemesterType {
  FIRST
  SUMMER
  SECOND
  WINTER
}

type Semester {
  id: ID! @id
  subjects: [Subject!]
  averagePoint: Float!
  totalCredit: Int!
  isOutside: Boolean @default(value: false)
  year: Int!
  semester: SemesterType!
}

type Subject {
  id: ID! @id
  title: String!
  code: String!
  grade: String!
  course: String!
}